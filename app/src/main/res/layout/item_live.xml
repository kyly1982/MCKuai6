<?xml version="1.0" encoding="utf-8"?>
<!-- 直播帖 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_recommend_height"
    android:background="@color/background_package_gray"
    android:paddingBottom="@dimen/item_divider_height" >

    <ImageView
        android:id="@+id/iv_postCover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_recommend_cove_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_recommend_cove_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@mipmap/frontcover_live" />

    <TextView
        android:id="@+id/tv_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/com_margin"
        android:layout_marginStart="@dimen/com_margin"
        android:background="@drawable/shape_background_live_reply"
        android:drawableLeft="@mipmap/icon_reply"
        android:drawablePadding="@dimen/com_padding"
        android:drawableStart="@mipmap/icon_reply"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/com_margin"
        android:paddingRight="@dimen/com_margin"
        android:singleLine="true"
        android:text="22222"
        android:textColor="@color/font_white" />

    <TextView
        android:id="@+id/tv_postTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_postCover"
        android:layout_marginBottom="@dimen/com_margin"
        android:layout_marginLeft="@dimen/com_margin"
        android:layout_marginRight="@dimen/com_margin"
        android:maxLines="2"
        android:text="话题标题话题标题话题标题话题标题话题标题"
        android:textColor="@color/font_white" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_ownerinfo_layout_height"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/iv_postCover"
        android:background="@drawable/background_top_bottom_frame"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/com_margin"
        android:paddingRight="@dimen/com_margin" >

        <ImageView
            android:id="@+id/civ_owner"
            android:layout_width="@dimen/item_ownerinfo_usercover_height"
            android:layout_height="@dimen/item_ownerinfo_usercover_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/com_margin"
            android:layout_marginRight="@dimen/com_margin"
            android:clickable="true"
            android:src="@mipmap/background_user_cover_default" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/com_margin"
            android:layout_marginRight="@dimen/com_margin"
            android:drawableLeft="@mipmap/icon_live_typelive"
            android:drawablePadding="@dimen/com_padding"
            android:drawableStart="@mipmap/icon_live_typelive"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/type_survival"
            android:textColor="@color/font_secondary" />

        <TextView
            android:id="@+id/tv_postStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/com_margin"
            android:layout_marginStart="@dimen/com_margin"
            android:drawableLeft="@mipmap/icon_live_big"
            android:drawablePadding="@dimen/com_padding"
            android:drawableStart="@mipmap/icon_live_big"
            android:gravity="center_vertical"
            android:text="@string/live_now"
            android:textColor="@color/font_secondary" />

        <TextView
            android:id="@+id/tv_postOwner_bottom"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/civ_owner"
            android:layout_toLeftOf="@id/tv_type"
            android:layout_toRightOf="@id/civ_owner"
            android:layout_toStartOf="@id/tv_type"
            android:clickable="true"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="用户名字用户名字"
            android:textColor="@color/font_secondary" />
    </RelativeLayout>

</RelativeLayout>
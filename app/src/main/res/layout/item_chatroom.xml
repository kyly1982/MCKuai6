<?xml version="1.0" encoding="utf-8"?>
<!-- 聊天室 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/iv_postCover"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_recommend_cove_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="fitXY" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_recommend_cove_height"
        android:layout_alignTop="@id/iv_postCover"
        android:background="@mipmap/frontcover_live" />

    <com.mckuai.imc.widget.Anticlock
        android:id="@+id/antiClock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/com_margin"
        android:layout_marginStart="@dimen/com_margin"
        android:background="@drawable/shape_background_chatroom_time"
        android:drawableLeft="@mipmap/icon_clock"
        android:drawablePadding="@dimen/com_padding"
        android:drawableStart="@mipmap/icon_clock"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/com_padding"
        android:paddingRight="@dimen/com_padding"
        android:textColor="@color/font_white" />

    <ImageView
        android:id="@+id/civ_lastUser"
        android:layout_width="@dimen/item_ownerinfo_usercover_height"
        android:layout_height="@dimen/item_ownerinfo_usercover_height"
        android:layout_alignBottom="@id/iv_postCover"
        android:layout_marginBottom="@dimen/com_margin"
        android:layout_marginLeft="@dimen/com_margin"
        android:layout_marginRight="@dimen/com_margin"
        android:src="@mipmap/background_user_cover_default" />

    <TextView
        android:id="@+id/tv_lastMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/civ_lastUser"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/civ_lastUser"
        android:layout_marginEnd="@dimen/com_margin"
        android:layout_marginRight="@dimen/com_margin"
        android:layout_toEndOf="@id/civ_lastUser"
        android:layout_toRightOf="@id/civ_lastUser"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:text="最后一句话最后一句话"
        android:textColor="@color/font_white" />

    <TextView
        android:id="@+id/tv_postTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/civ_lastUser"
        android:layout_marginBottom="@dimen/com_margin"
        android:layout_marginLeft="@dimen/com_margin"
        android:layout_marginRight="@dimen/com_margin"
        android:layout_marginTop="@dimen/com_margin"
        android:maxLines="2"
        android:text="话题标题话题标题话题标题话题标题话题标题"
        android:textColor="@color/font_white" />

</RelativeLayout>
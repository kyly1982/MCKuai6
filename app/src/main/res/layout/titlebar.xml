<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    android:background="@color/background_green" >

    <ImageView
        android:id="@+id/btn_left"
        android:layout_width="@dimen/button_left_width"
        android:layout_height="@dimen/titlebar_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:paddingLeft="@dimen/com_margin"
        android:paddingRight="@dimen/padding_right_button_left"
        android:scaleType="center"
        android:src="@drawable/btn_titlebar_leftmenu_selector" />

    <Spinner
        android:id="@+id/sp_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/com_margin"
        android:layout_marginLeft="@dimen/com_margin"
        android:layout_marginRight="@dimen/com_margin"
        android:background="@mipmap/btn_dropdown"
        android:entries="@array/live_type_simple"
        android:spinnerMode="dropdown"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/btn_right"
        android:layout_width="@dimen/button_left_width"
        android:layout_height="@dimen/titlebar_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:paddingLeft="@dimen/padding_right_button_left"
        android:paddingRight="@dimen/com_margin"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/titlebar_button_height"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:maxLength="10"
        android:singleLine="true"
        android:text="title"
        android:textColor="@color/font_white"
        android:textSize="@dimen/font_dimen_title" />

</RelativeLayout>
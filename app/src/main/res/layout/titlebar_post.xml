<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/titlebar_height"
    android:background="@color/background_green"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/btn_return"
        android:layout_width="@dimen/button_left_width"
        android:layout_height="@dimen/titlebar_height"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:paddingLeft="@dimen/com_margin"
        android:paddingRight="@dimen/padding_right_button_left"
        android:scaleType="center"
        android:src="@drawable/btn_return_selector" />

    <TextView
        android:id="@+id/tv_posttitle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/titlebar_button_height"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:maxLength="10"
        android:singleLine="true"
        android:textColor="@color/font_white"
        android:textSize="@dimen/font_dimen_title" />

    <Button
        android:id="@+id/btn_showOwner"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/titlebar_height"
        android:layout_alignParentRight="true"
        android:background="@drawable/background_post_showowner_shape"
        android:paddingLeft="@dimen/padding_right_button_left"
        android:paddingRight="@dimen/com_margin"
        android:text="@string/btn_showowneronly"
        android:textColor="@color/font_white"
        android:textSize="@dimen/font_dimen_primary" />

    <ImageButton
        android:id="@+id/btn_publish"
        android:layout_width="@dimen/button_left_width"
        android:layout_height="@dimen/titlebar_height"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:background="@null"
        android:paddingLeft="@dimen/padding_right_button_left"
        android:paddingRight="@dimen/com_margin"
        android:src="@mipmap/btn_post_publish"
        android:visibility="invisible" />

</RelativeLayout>